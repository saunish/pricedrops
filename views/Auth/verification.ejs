<div class="jumbotron">
    <div class="container">
        <p>Verify your email address to proceed further</p>
        <form method='post'>

            <div class="form-group">
                <label>Email Verification required. Click on Email Verification Button</label>
            </div>

            <div class="form-group">
                <label>If verification email not received check the email you entered</label>
            </div>

            <div class="form-group">
                <label>email : <%= email %></label>
            </div>

            <div class="form-group">
                <input type='submit' class="btn-warning custom-button" name='verify' value='Email Verification'>
                <input type='button' class="btn-primary custom-button" name='email' value='Change Email'
                       onclick="ver()">
            </div>

            <div class="form-group">
                <div class="input-group">
                    <input type="hidden" class="input-lg" name="email" id="em" required>
                    <input type="hidden" class="input-lg" name="password" id="pdw" required>
                    <input type="hidden" class="btn-success custom-button" name="submit" id="sub">
                </div>
            </div>

        </form>
    </div>
</div>

<script>
    function ver() {
        var email = document.getElementById('em');
        var password = document.getElementById('pdw');
        var submit = document.getElementById('sub');
        email.setAttribute('type', 'email');
        email.setAttribute('placeholder', 'abc@gmail.com');


        password.setAttribute('type', 'password');
        password.setAttribute('placeholder', 'Password');

        submit.setAttribute('type', 'submit');
        submit.setAttribute('value', 'Change Email');
    }
</script>


