<div class="main-content wishlist">
    <div class="container">
        <ul class="list-none">

            <%
            if(data == "No data in wishlist"){
            %>
            <p><%= data %></p>
            <% }
            else{
            %>
            <h3>List Of Products in wishlist</h3>
            <%
            for(var i = 0 ; i < data.length ; i++) {
            %>

            <li>
                <div class="row">
                    <div class="col-sm-3">
                        <figure>
                            <a href="/user/<%= uid %>/info/<%= data[i].pid %>">
                                <img src="<%= data[i].image %>" alt="" class="img-responsive">
                            </a>
                        </figure>
                    </div>
                    <div class="col-sm-7">
                        <h3><%= data[i].title %></h3>
                        <h3><%= data[i].brand %></h3>
                        <h3><%= data[i].provider %></h3>
                        <h4><%= data[i].current_price %></h4>
                        <%
                            var bools = false;
                            for (var j = 0; j < nlist.length; j++) {
                                if (data[i].provider + "-" + data[i].pid == nlist[j])
                                    bools = true;
                            }
                        if(bools){
                        %>
                        <h3>Product is in notification list</h3>
                        <%}
                        else{
                        %>
                        <h3>Product is not in notification list</h3>
                        <%
                        }

                        %>
                    </div>
                    <div class="col-sm-2 button-group">
                        <form method="post">
                            <input type="hidden" value="<%= data[i].provider %>" name="rpps">
                            <input type="hidden" value="<%= data[i].pid %>" name="rps">
                            <input class="btn-primary" type="submit" value="Notify" name="notif">
                        </form>

                        <form method="post">
                            <input type="hidden" value="<%= data[i].provider %>" name="rppss">
                            <input type="hidden" value="<%= data[i].pid %>" name="rpss">
                            <input class="btn-danger" type="submit" value="Remove Notification" name="rn">
                        </form>

                        <form method="post">
                            <input type="hidden" value="<%= data[i].provider %>" name="rpp">
                            <input type="hidden" value="<%= data[i].pid %>" name="rp">
                            <input class="btn-danger" type="submit" value="Remove Product" name="remove">
                        </form>
                    </div>
                </div>
            </li>

            <% }} %>
        </ul>
    </div>
</div>


